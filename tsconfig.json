{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "./build",
		"module": "ESNext",
		"target": "ES2020",
		"lib": ["ES2020", "dom"],
		"sourceMap": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictNullChecks": true,
		"moduleResolution": "node",
		"declaration": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"paths": {
			"@request-orchestrator/core": ["./packages/core/src/index.ts"],
			"@request-orchestrator/adapter-fetch": ["./packages/adapter-fetch/src/index.ts"]
		}
	},
	"include": ["./index.ts"],
	"exclude": ["./build", "./packages"]
}
