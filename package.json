{
  "name": "flow-pipe",
  "version": "1.0.0",
  "type": "module",
  "description": "A powerful TypeScript library for creating and managing request chains. Flow-pipe allows you to chain multiple HTTP requests together, transform results, and handle responses with ease.",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "import": "./build/index.js"
    },
    "./core/RequestAdapter": {
      "types": "./build/core/RequestAdapter.d.ts",
      "import": "./build/core/RequestAdapter.js"
    },
    "./core/models/RequestParams": {
      "types": "./build/core/models/RequestParams.d.ts",
      "import": "./build/core/models/RequestParams.js"
    }
  },
  "files": [
    "build/**/*.js",
    "build/**/*.d.ts",
    "build/**/*.js.map",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "flow",
    "pipe",
    "request",
    "chain",
    "manager",
    "adapter",
    "http",
    "fetch",
    "api",
    "pipeline",
    "typescript"
  ],
  "scripts": {
    "test": "node --test --import tsx/esm 'src/core/__test__/**/*.test.ts'",
    "test:watch": "node --test --import tsx/esm --watch 'src/core/__test__/**/*.test.ts'",
    "test:coverage": "c8 npm test",
    "test:coverage:report": "c8 report --reporter=html",
    "build": "tsc",
    "clean": "rm -rf build",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run lint && npm run type-check && npm run build"
  },
  "author": "Dawid Hermann",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dawidhermann/flow-pipe.git"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "c8": "^10.1.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1"
  }
}
